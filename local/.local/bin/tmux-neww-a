#!/usr/bin/env bash

session=one
main_window=MAIN
# If we don't have main session → then create main session
if ! tmux has-session -t "=$session" 2> /dev/null; then
    tmux new-session -ds $session -n MAIN
fi

# If we don't have MAIN window → then create main window
if ! tmux list-window -t $session | grep MAIN ; then 
  tmux-MAIN-home
  exit 0
else
  
  window_name=$(pwd | rev | cut -d "/" -f1 | rev)
  tmux neww -n $window_name
    
    # Then switch to the dest
    if [ ! $TMUX ] ; then
      tmux a -t $session 
    else
      tmux switch -t $session
    fi
fi
