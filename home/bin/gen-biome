#!/usr/bin/env node

const fs = require("node:fs");

const prettierFileContent =
`
{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noEmptyInterface": "off"
      }
    },
    "ignore": ["dist", "build", "node_modules"]
  },
  "formatter": {
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": ["dist", "build", "node_modules"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingComma": "es5",
      "arrowParentheses": "asNeeded"
    }
  }
}
`;




const fileName = "biome.json";

if (!fs.existsSync(fileName)) {
  fs.writeFileSync(fileName, prettierFileContent, {
    // encoding: "utf8",
    // flag: "a+",
    mode: 0o644,
  });
}
