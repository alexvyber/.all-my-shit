get_os() {
	case "$(uname -sr)" in

	Darwin*)
		echo 'mac'
		;;

	Linux*Microsoft*)
		echo 'wsl'
		;;

	Linux*)
		echo 'linux'
		;;

	CYGWIN* | MINGW* | MINGW32* | MSYS*)
		echo 'windows'
		;;

	*)
		echo 'other'
		;;

	esac
}

open_link() {

	case "$(get_os)" in

	mac)
		open -a "Google Chrome" https://$1
		;;

	linux)
		google-chrome $1
		;;

	esac

}

ghshit() {
	case "$(get_os)" in

	mac)
		cat ~/.shitgh | pbcopy
		;;

	linux)
		cat ~/.shitgh | xclip -selection clipboard
		;;

	esac

}

cwd() {
	case "$(get_os)" in

	mac)
		pwd | tr -d "\r\n" | pbcopy
		;;

	linux)
		pwd | tr -d "\r\n" | xclip -selection clipboard
		;;

	esac

}

newrepo() {
	if [ -z "$1" ]; then
		open_link github.com/new
	else
		open_link "github.com/new?name=$1"
	fi
}
