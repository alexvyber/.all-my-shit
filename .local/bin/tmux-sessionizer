#!/usr/bin/env bash
base_path=/home/alexs/

 if [[ $# -eq 1 ]]; then
  selected=$1
 else
  selected=$(find \
    ~/.all-my-shit \
    ~/tmp \
    ~/personal \
    ~/work \
    -mindepth 0 -maxdepth 2 \
    -type d \
    -not -path "**/.git" \
    -not -path "**/.git/**" \
    -not -path "**/node_modules" \
    | cut -d "/" -f4- \
    | fzf )
 fi

 if [[ -z $selected ]]; then
    exit 0
 fi

 session_folder=$( echo $selected | cut -d "/" -f1  | tr . _ )
 window_folder=$( echo $selected | rev | cut -d "/" -f 1 | rev  | tr . _ )
 
#  echo $session_folder ;  echo $window_folder ;  echo $selected ;  echo $base_path

tmux_running=$(pgrep tmux)

 if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
   tmux new-session -s $session_folder -n $window_folder -c $base_path$selected
   exit 0
fi

if ! tmux has-session -t "=$session_folder" 2> /dev/null; then
  echo "IMRUNNIG"
    tmux new-session -d -s $session_folder -n $window_folder -c $base_path$selected
fi

if tmux has-session -t "=$session_folder" 2> /dev/null ; then  
   tmux switch-client -t $session_folder

if [[ ! -z $( tmux list-windows -t $session_folder | grep $window_folder ) ]] ; then
  echo "sssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
else
  echo "NOT WORKING"
  tmux new-window -n $window_folder -c $base_path$selected
fi

fi


if [ ! $TMUX ] ; then
 tmux a -t $session_folder:$window_folder
else
 tmux switch-client -t $session_folder:$window_folder
fi
