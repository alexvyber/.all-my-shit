#!/usr/bin/env node

const fs = require("node:fs");

const prettierFileContent = `
module.exports = {
  printWidth: 100,
  semi: false,
  arrowParens: "avoid",
  tabWidth: 2,
  useTabs: false,
  trailingComma: "none",
  singleQuote: false,
  bracketSameLine: true
}
`;

const fileName = "prettier.config.cjs";

if (!fs.existsSync(fileName)) {
  fs.writeFileSync(fileName, prettierFileContent, {
    // encoding: "utf8",
    // flag: "a+",
    mode: 0o644,
  });
}
