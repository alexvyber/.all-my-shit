#!/usr/bin/env node

const fs = require("node:fs");

const prettierFileContent =
`{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 100,
     "ignore": [".next", "build", ".cache", "some-*", "node_modules"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded"
    }
  }
}`;




const fileName = "rome.json";

if (!fs.existsSync(fileName)) {
  fs.writeFileSync(fileName, prettierFileContent, {
    // encoding: "utf8",
    // flag: "a+",
    mode: 0o644,
  });
}
