#!/usr/bin/env bash

REPOS=("dotfiles" \
       "personal/personal" \
       "personal/rat" \
       "personal/plow" )
RED='\033[1;38m'
SEP='\033[1;37m'
SEPAR="···············································································"
NC='\033[0m' # No Color
g.status_all () {

  for REPO in $REPOS
    do
      # Colorful ouput
      # https://stackoverflow.com/a/5947802
      echo " "
      printf "${RED}$REPO  ${NC}\n"
      printf "${SEP}$SEPAR  ${NC}\n"
      git --git-dir=$HOME/$REPO/.git -C $HOME/$REPO status ; echo ""
    done

  }
