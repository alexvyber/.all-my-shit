#!/usr/bin/env bash
base_path=/home/alexs/

# ↓↓↓ Yeah that's stupid, but all I can do now


case $1 in
   main)
      selected=$(find                                       \
           ~/learn                              \
           ~/learn/go                              \
           ~/learn/go/powerful-cli                              \
           ~/learn/go/powerful-cli/pragprog.com                              \
           ~/elixir                               \
           ~/elixir/learn                               \
           ~/repos                               \
           ~/tmp                                      \
           ~/personal                                 \
           ~/stuff                                 \
           ~/soft                                 \
           ~/next                                 \
           ~/repos                                 \
           ~/tmp                                 \
           ~/js                                 \
           ~/js/books                                 \
           ~/personal/vyber                           \
           ~/work                                     \
           ~/work/gate                                     \
           -mindepth 0                                \
           -maxdepth 2                                \
           -type d                                    \
           -not -path "**/build"                      \
           -not -path "**/dist"                       \
           -not -path "**/.next"                      \
           -not -path "**/.cache"                     \
           -not -path "**/.cache/**"                  \
           -not -path "**/.git"                       \
           -not -path "**/.git/**"                    \
           -not -path "**/node_modules"               \
           -not -path "**/node_modules/**"            \
           | sort -u                                  \
           | cut -d "/" -f4-                          \
           | fzf )
                 ;;

   configs)
      selected=$(find                                 \
           ~/dotfiles                                \
           ~/dotfiles/dot                                \
           ~/.config      \
           ~/.local       \
           ~/.oh-my-zsh   \
           ~/.ssh         \
           ~/.zsh         \
           ~/.vim         \
           ~/Downloads    \
           -mindepth 0                                \
           -maxdepth 2                                \
           -follow                                    \
           -type d                                    \
           -not -path "**/build"                      \
           -not -path "**/dist"                       \
           -not -path "**/.next"                      \
           -not -path "**/.cache"                     \
           -not -path "**/.cache/**"                  \
           -not -path "**/.git"                       \
           -not -path "**/.git/**"                    \
           -not -path "**/node_modules"               \
           -not -path "**/node_modules/**"            \
           | sort -u                                  \
           | cut -d "/" -f4-                          \
           | fzf )
                 ;;

   *)
      selected=$(find                                 \
            ~/.                                       \
           -mindepth 0                                \
           -maxdepth 2                                \
           -type d                                    \
           -not -path "**/build"                      \
           -not -path "**/dist"                       \
           -not -path "**/.next"                      \
           -not -path "**/.cache"                     \
           -not -path "**/.cache/**"                  \
           -not -path "**/.git"                       \
           -not -path "**/.git/**"                    \
           -not -path "**/node_modules"               \
           -not -path "**/node_modules/**"            \
           | sort -u                                  \
           | cut -d "/" -f4-                          \
           | fzf )
                 ;;
esac

 if [[ -z $selected ]]; then
    exit 0
 fi

session=$( echo $selected |       cut -d "/" -f1        | tr . _ )
window=$(  echo $selected | rev | cut -d "/" -f1 | rev  | tr . _ )
path=$base_path$selected

# If we don't have session with EXACT session name → we create session:window with choosen path
if ! tmux has-session -t "=$session" 2> /dev/null; then
    echo $path
     tmux new-session -d -s ${session} -n $window -c $path
fi

# not in tmux, then attach to target session
if [ ! $TMUX ] ; then
   tmux attach-session -t $session
   exit 0
fi

tmux switch -t $session

# If target-session has NO window with given name → create new window with given name and choosen path
if [[ -z $( tmux list-windows -t =$session | grep $window ) ]] ; then
   tmux new-window -n $window -c $path
   exit 0
else # Else switch to the window
   tmux switch -t $session:$window
   echo "this runs"
   exit 0
fi

# Output the variables
if true ; then
  echo "Session: $session"
  echo "Window: $window"
  echo "Selected: $selected"
  echo "base_path: $base_path"
  echo "path: $path"
fi
