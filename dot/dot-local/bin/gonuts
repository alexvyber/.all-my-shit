#!/usr/bin/env bash

# --

sudo swapoff --all
xset r rate 140 100

# --

declare -A disks=(
	[FILER]=sdd
	[REPOS]=sda
	[SHITTER]=sdb1
)

for key in "${!disks[@]}"; do
	# echo "$key => ${disks[$key]}"
	if mountpoint -q /mnt/$key; then
		echo "$key already mounted"
	else
		sudo mount /dev/${disks[$key]} /mnt/$key
		echo "$key mounted"
	fi
done

# --

cat ~/.config/awesome/gonuts.lua | awesome-client

# --

setxkbmap -layout us,ru
setxkbmap -option 'grp:alt_shift_toggle'
xmodmap ~/.Xmodmap
