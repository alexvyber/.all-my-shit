#!/usr/bin/env bash


sudo swapoff -a


xset r rate 170 75


declare -A disks=(
  [FILER]=sdc2
  # [TORRENTER]=sdb1
  [SHITTER]=sdb1
)


for key in "${!disks[@]}";  do
    # echo "$key => ${disks[$key]}"
    if mountpoint -q /mnt/$key; then
        echo "$key already mounted"
    else
        sudo mount /dev/${disks[$key]} /mnt/$key
        echo "$key mounted"
    fi ;
  done


cat ~/.config/awesome/gonuts.lua | awesome-client



