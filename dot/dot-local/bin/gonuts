#!/usr/bin/env bash


xset r rate 180 70


declare -A disks=(
  [FILER]=sda2
  [TORRENTER]=sdb1
  [SHITTER]=sdd1
)


for key in "${!disks[@]}";  do 
    # echo "$key => ${disks[$key]}"
    if mountpoint -q /mnt/$key; then
        echo "$key already mounted"
    else
        sudo mount /dev/${disks[$key]} /mnt/$key 
        echo "$key mounted"
    fi ; done


cat ~/.config/awesome/start-apps.lua | awesome-client




