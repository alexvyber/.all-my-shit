#!/usr/bin/env bash

# source $HOME/repos/jessfraz/dotfiles/.functions
source $HOME/.tmp_functions

mkd() {
  mkdir "$1"
  cd "$1" || exit
}

tmpd() {
  local dir
  if [ $# -eq 0 ] ; then
    dir=$(mktemp -d)
  else
    dir=$(mktemp -d -t "${1}.XXXXXXXXXX")
  fi
  cd "$dir" || exit
}

change_nvim() {
  rm ~/.config/nvim
  ln -sf ~/personal/nvim/$1 ~/.config/nvim

}

change_awesome_theme() {
  ln -sf ~/.config/awesome/$1.lua ~/.config/awesome/theme.lua
}
